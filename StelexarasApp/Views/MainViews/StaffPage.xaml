<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StelexarasApp.UI.Views.StaffPage"
             Title="Staff">
	<ContentPage.Content>
		<CollectionView ItemsSource="{Binding StaffList}" SelectionMode="Single" SelectionChanged="OnStelexosSelected">
			<CollectionView.Header>
				<Grid Padding="10" ColumnDefinitions="*, *">
					<Label Grid.Column="0" Text="Όνομα" FontAttributes="Bold" />
					<Label Grid.Column="1" Text="Χώρος" FontAttributes="Bold" />
					<Label Grid.Column="1" Text="Τηλέφωνο" FontAttributes="Bold" />
				</Grid>
			</CollectionView.Header>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<StackLayout>
						<Label Text="{Binding FullName}" />
						<Label Text="{Binding XwrosName}" />
						<Label Text="{Binding Tel}" />
					</StackLayout>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</ContentPage.Content>
</ContentPage>
