<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StelexarasApp.UI.Views.MainPage" Padding="10">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Button Grid.Row="0" Grid.Column="0" Text="ΣΤΕΛΕΧΗ" Clicked="OnStaffButtonClicked" BorderColor="White" BorderWidth="1"/>
		<Button Grid.Row="0" Grid.Column="1" Text="ΠΑΙΔΙΑ" Clicked="OnPaidiaButtonClicked" BorderColor="White" BorderWidth="1"/>
		<Button Grid.Row="1" Grid.Column="0" Text="ΧΩΡΟΙ" Clicked="OnTeamsPageButtonClicked" BorderColor="White" BorderWidth="1"/>
		<Button Grid.Row="1" Grid.Column="1" Text="ΥΠΟΧΡΕΩΣΕΙΣ" Clicked="OnDutiesButtonClicked" BorderColor="White" BorderWidth="1"/>
		<!--<Button Grid.Row="1" Grid.Column="1" Text="ΕΞΟΔΑ" Clicked="OnExpensesButtonClicked" BorderColor="White" BorderWidth="1"/>-->
	</Grid>
</ContentPage>
