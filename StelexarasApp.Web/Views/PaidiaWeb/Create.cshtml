@using StelexarasApp.Library.Dtos.Atoma
@model IStelexosDto

@{
    ViewData ["Title"] = "Create Staff";
}

<h1>Create Staff Member</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="FullName" class="control-label">Full Name</label>
        <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Thesi" class="control-label">Position</label>
        <input asp-for="Thesi" class="form-control" placeholder="Enter position" />
        <span asp-validation-for="Thesi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tel" class="control-label">Phone</label>
        <input asp-for="Tel" class="form-control" placeholder="Enter phone number" />
        <span asp-validation-for="Tel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
