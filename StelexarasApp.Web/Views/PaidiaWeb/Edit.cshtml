@model StelexarasApp.Library.Models.Atoma.Paidi

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Paidi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SeAdeia" /> @Html.DisplayNameFor(model => model.SeAdeia)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <select asp-for="Sex" class="form-control"></select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaidiType" class="control-label"></label>
                <select asp-for="PaidiType" class="form-control"></select>
                <span asp-validation-for="PaidiType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkiniId" class="control-label"></label>
                <select asp-for="SkiniId" class="form-control" asp-items="ViewBag.SkiniId"></select>
                <span asp-validation-for="SkiniId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
