@using StelexarasApp.Library.Dtos.Domi
@model IEnumerable<SkiniDto>

<h2>All Skines</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skini in Model)
        {
            <tr>
                <td>@skini.Name</td>
                <td>@skini.KoinotitaName</td>
                <td>
                    <a asp-action="Details" asp-route-name="@skini.Name">Details</a> |
                    <a asp-action="Edit" asp-route-name="@skini.Name">Edit</a> |
                    <a asp-action="Delete" asp-route-name="@skini.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Skini</a>
