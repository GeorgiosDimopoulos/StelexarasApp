@using StelexarasApp.Library.Dtos.Domi
@model IEnumerable<SkiniDto>

<h2>All Skines</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skini in Model)
        {
            <tr>
                <td>@skini.Name</td>
                <td>@skini.KoinotitaName</td>
                <td>
                    <a asp-action="Details" asp-route-name="@skini.Name">Details</a> |
                    <a asp-action="Edit" asp-route-name="@skini.Name">Edit</a> |
                    <form asp-action="DeleteConfirmed" asp-route-id="@skini.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Skini</a>
