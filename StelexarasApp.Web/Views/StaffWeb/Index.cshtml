@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using StelexarasApp.Library.Dtos.Atoma
@model IEnumerable<IStelexosDto>

@{
    ViewData ["Title"] = "Staff List";
}

<h1>Staff List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Position</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.FullName</td>
                <td>@staff.Thesi</td>
                <td>@staff.Tel</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@staff.FullName" asp-route-thesi="@staff.Thesi" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteConfirmed" asp-route-id="@staff.FullName" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary mt-3">Add New Staff</a>
