@model IStelexosDto

@{
    ViewData ["Title"] = "Staff Details";
}

<h1>Staff Details</h1>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" asp-route-thesi="@Model.Position" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
